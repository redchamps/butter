#!/usr/bin/env php
<?php
require_once __DIR__ . '/../vendor/autoload.php';

use Symfony\Component\Console\Application;
use Console\App\Commands\MagentoInstall;
use Console\App\Commands\SubCommands\PlaceFiles;
use Console\App\Commands\SubCommands\CreateDatabase;
use Console\App\Commands\SubCommands\Install;

$config = require __DIR__ . '/../etc/config.php';
$app = new Application();
$app->add(new MagentoInstall($config));
$app->add(new PlaceFiles($config));
$app->add(new CreateDatabase($config));
$app->add(new Install($config));
$app->run();
